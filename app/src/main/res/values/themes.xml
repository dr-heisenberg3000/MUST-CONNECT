<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.MUSTConnect" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        
        <!-- Secondary brand colors -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryDark</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        
        <!-- Surface colors -->
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorSurfaceVariant">@color/colorSurfaceVariant</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        
        <!-- Background colors -->
        <item name="android:windowBackground">@color/colorBackground</item>
        
        <!-- Status bar and navigation -->
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:navigationBarColor">@color/colorSurface</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">true</item>
        
        <!-- Typography -->
        <item name="textAppearanceHeadlineLarge">@style/TextAppearance.MUSTConnect.HeadlineLarge</item>
        <item name="textAppearanceHeadlineMedium">@style/TextAppearance.MUSTConnect.HeadlineMedium</item>
        <item name="textAppearanceHeadlineSmall">@style/TextAppearance.MUSTConnect.HeadlineSmall</item>
        <item name="textAppearanceBodyLarge">@style/TextAppearance.MUSTConnect.BodyLarge</item>
        <item name="textAppearanceBodyMedium">@style/TextAppearance.MUSTConnect.BodyMedium</item>
        <item name="textAppearanceBodySmall">@style/TextAppearance.MUSTConnect.BodySmall</item>
        
        <!-- Component styles -->
        <item name="toolbarStyle">@style/Widget.MUSTConnect.Toolbar</item>
        <item name="materialButtonStyle">@style/Widget.MUSTConnect.Button</item>
        <item name="textInputStyle">@style/Widget.MUSTConnect.TextInputLayout</item>
        <item name="cardViewStyle">@style/Widget.MUSTConnect.CardView</item>
        
        <!-- Animation -->
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>

    <!-- No Action Bar theme for splash screen -->
    <style name="Theme.MUSTConnect.NoActionBar" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        
        <!-- Secondary brand colors -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryDark</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        
        <!-- Surface colors -->
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorSurfaceVariant">@color/colorSurfaceVariant</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        
        <!-- Background colors -->
        <item name="android:windowBackground">@color/colorBackground</item>
        
        <!-- Status bar and navigation -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        
        <!-- Typography -->
        <item name="textAppearanceHeadlineLarge">@style/TextAppearance.MUSTConnect.HeadlineLarge</item>
        <item name="textAppearanceHeadlineMedium">@style/TextAppearance.MUSTConnect.HeadlineMedium</item>
        <item name="textAppearanceHeadlineSmall">@style/TextAppearance.MUSTConnect.HeadlineSmall</item>
        <item name="textAppearanceBodyLarge">@style/TextAppearance.MUSTConnect.BodyLarge</item>
        <item name="textAppearanceBodyMedium">@style/TextAppearance.MUSTConnect.BodyMedium</item>
        <item name="textAppearanceBodySmall">@style/TextAppearance.MUSTConnect.BodySmall</item>
        
        <!-- Component styles -->
        <item name="toolbarStyle">@style/Widget.MUSTConnect.Toolbar</item>
        <item name="materialButtonStyle">@style/Widget.MUSTConnect.Button</item>
        <item name="textInputStyle">@style/Widget.MUSTConnect.TextInputLayout</item>
        <item name="cardViewStyle">@style/Widget.MUSTConnect.CardView</item>
        
        <!-- Animation -->
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>

    <!-- Toolbar style -->
    <style name="Widget.MUSTConnect.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="titleTextColor">@color/colorOnPrimary</item>
        <item name="subtitleTextColor">@color/colorOnPrimary</item>
        <item name="android:background">@drawable/bg_gradient_toolbar</item>
        <item name="elevation">8dp</item>
    </style>

    <!-- Button styles -->
    <style name="Widget.MUSTConnect.Button" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">16dp</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:background">@drawable/bg_button_primary_modern</item>
        <item name="rippleColor">@color/colorPrimaryLight</item>
    </style>

    <style name="Widget.MUSTConnect.Button.Secondary" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">16dp</item>
        <item name="cornerRadius">12dp</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="rippleColor">@color/colorPrimaryLight</item>
    </style>

    <!-- Text Input styles -->
    <style name="Widget.MUSTConnect.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="hintTextColor">@color/colorPrimary</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
    </style>

    <!-- Card styles -->
    <style name="Widget.MUSTConnect.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/cardBackground</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="contentPadding">0dp</item>
    </style>

    <!-- Typography styles -->
    <style name="TextAppearance.MUSTConnect.HeadlineLarge" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.MUSTConnect.HeadlineMedium" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.MUSTConnect.HeadlineSmall" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.MUSTConnect.BodyLarge" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.MUSTConnect.BodyMedium" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/colorTextSecondary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.MUSTConnect.BodySmall" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">@color/colorTextTertiary</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Window animation -->
    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@anim/slide_in_right</item>
        <item name="android:windowExitAnimation">@anim/slide_out_left</item>
    </style>
</resources>